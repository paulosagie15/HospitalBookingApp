
<%= simple_form_for(@book_appointment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :bookid %>
    <%= f.input :FirstName %>
    <%= f.input :LastName %>
    <%= f.input :telephon %>
    <%= f.input :Email %>
    <%= f.input :password %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
